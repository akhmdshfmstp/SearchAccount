<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="RegularFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LightFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SemiBoldFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActionBarStyle.UserFinder" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="ButtonRedPurpleGradient">
        <item name="android:background">@drawable/btn_blue_gradient_custom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="RegularText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="InputLayout.Shrine" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="InputLayout.Shrine.Dark">
        <item name="boxStrokeColor">@color/secondaryTextColor</item>
    </style>

</resources>
